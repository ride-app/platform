FROM alpine:3.20.2@sha256:8f37f6b1173d0e2d484e011780cfeab05fc4fc9a5f90a7b64ec8619f8509092d as builder
WORKDIR /app
SHELL ["/bin/ash", "-eo", "pipefail", "-c"]
RUN apk add --no-cache gettext=0.22.3-r0

ENV PORT 8080
ARG HOSTNAME
ENV HOSTNAME ${HOSTNAME}
ARG SERVICE_SUFFIX
ENV SERVICE_SUFFIX ${SERVICE_SUFFIX}

COPY envoy.template.yaml envoy.template.yaml
RUN envsubst < envoy.template.yaml > envoy.yaml

FROM envoyproxy/envoy:distroless-v1.28-latest@sha256:7dec57a59d913b6a769b0ff51e437b52eef8f268763d2f889d57ab2482a64f9b
COPY --from=builder /app/envoy.yaml /etc/envoy/envoy.yaml